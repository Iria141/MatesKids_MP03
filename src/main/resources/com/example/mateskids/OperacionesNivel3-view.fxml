<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: linear-gradient(to bottom, #FFD700, #FFA500, #F08080);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mateskids.OperacionesNivel3">

    <Label fx:id="preguntaLabel" style="-fx-font-size: 18px; -fx-text-fill: #336699;" text=" Se muestra el calculo" />

    <TextField fx:id="respuestaUsuario" alignment="CENTER" promptText="Escribe tu respuesta aquí" style="-fx-max-width: 200px; -fx-border-color: #2196F3; -fx-background-color: white; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-min-height: 40px;" />

    <Button fx:id="btnOpcion1" onAction="#verificarRespuesta" style="-fx-border-radius: 20px; -fx-border-color: #336699; -fx-min-height: 40px; -fx-min-width: 40px; -fx-background-radius: 20px;" text="Muestra Opción 1" />
    <Button fx:id="btnOpcion2" onAction="#verificarRespuesta" style="-fx-border-radius: 20px; -fx-border-color: #336699; -fx-min-height: 40px; -fx-min-width: 40px; -fx-background-radius: 20px;" text="Muestra Opción 2" />
    <Button fx:id="btnOpcion3" onAction="#verificarRespuesta" style="-fx-border-radius: 20px; -fx-border-color: #336699; -fx-min-height: 40px; -fx-min-width: 40px; -fx-background-radius: 20px;" text="Muestra Opción 3" />

    <Label fx:id="resultadoLabel" style="-fx-font-size: 16px; -fx-text-fill: red;" text="" />

    <Button fx:id="btnVerificar" onAction="#verificarRespuestaUsuario" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 20px;" text="Comprobar" visible="false">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <effect>
            <DropShadow>
                <color>
                    <Color red="1.0" green="1.0" blue="1.0" />
                </color>
            </DropShadow>
        </effect>
    </Button>

    <Button onAction="#onSiguienteButtonClick" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 20px;" text="Siguiente">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <effect>
            <DropShadow>
                <color>
                    <Color red="1.0" green="1.0" blue="1.0" />
                </color>
            </DropShadow>
        </effect>
    </Button>

    <Button onAction="#volver" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 20px;" text="Volver">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <effect>
            <DropShadow>
                <color>
                    <Color red="1.0" green="1.0" blue="1.0" />
                </color>
            </DropShadow>
        </effect>
    </Button>
</VBox>
