<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #FFD700, #FFA500, #F08080);;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mateskids.InicioController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

<!-- Título -->
    <Label fx:id="titulo" text="¡Bienvenido a MateKids!"/>

<!-- Descripción -->
    <Label fx:id="descripcion" text="Elige tu nivel para empezar a jugar y aprender matemáticas." />

<!-- Botones -->
    <Button fx:id="botonFacil" onAction="#onFacilButtonClick" text="Nivel 1" styleClass="button-nivel" />
    <Button fx:id="botonMedio" onAction="#onMedioButtonClick" text="Nivel 2" styleClass="button-nivel" />
    <Button fx:id="botonDificil" onAction="#onDificilButtonClick" text="Nivel 3" styleClass="button-nivel" />

</VBox>