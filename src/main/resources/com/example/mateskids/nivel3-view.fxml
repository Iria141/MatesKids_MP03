<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.paint.Color?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Cursor?>
<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #FFD700, #FFA500, #F08080);;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mateskids.Nivel3Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Título -->
    <Label style="-fx-font-size: 36px; -fx-font-weight: bold;" styleClass="label-titulo" text="¡Nivel 3!" />


    <!-- Botones -->
    <Button contentDisplay="TOP" graphicTextGap="0.0" onAction="#onSuma3ButtonClick" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 20px;" text="Sumas Llevando">
        <font>
            <Font size="16.0" />
        </font>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <effect>
            <DropShadow>
                <color>
                    <Color red="1.0" green="1.0" blue="1.0" />
                </color>
            </DropShadow>
        </effect>
    </Button>


    <Button contentDisplay="TOP" graphicTextGap="0.0" onAction="#onResta3ButtonClick" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 20px;" text="Restas LLevando">
        <font>
            <Font size="16.0" />
        </font>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <effect>
            <DropShadow>
                <color>
                    <Color red="1.0" green="1.0" blue="1.0" />
                </color>
            </DropShadow>
        </effect>
    </Button>

    <Button contentDisplay="TOP" graphicTextGap="0.0" onAction="#onMultiplicacion3ButtonClick" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 20px;" text="Multiplicaciones">
        <font>
            <Font size="16.0" />
        </font>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <effect>
            <DropShadow>
                <color>
                    <Color red="1.0" green="1.0" blue="1.0" />
                </color>
            </DropShadow>
        </effect>
    </Button>


    <Button contentDisplay="TOP" graphicTextGap="0.0" onAction="#onDivisionButtonClick" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 20px;" text="Divisiones ">
        <font>
            <Font size="16.0" />
        </font>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <effect>
            <DropShadow>
                <color>
                    <Color red="1.0" green="1.0" blue="1.0" />
                </color>
            </DropShadow>
        </effect>
    </Button>

    <!-- Botón para regresar a la pantalla principal -->
    <Button fx:id="inicioVolver" contentDisplay="TOP" graphicTextGap="0.0" onAction="#volverAlInicio" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 20px;" styleClass="button" text="Volver al Inicio">
        <font>
            <Font size="16.0" />
        </font>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <effect>
            <DropShadow>
                <color>
                    <Color red="1.0" green="1.0" blue="1.0" />
                </color>
            </DropShadow>
        </effect>
    </Button>
</VBox>